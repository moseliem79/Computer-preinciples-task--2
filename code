#include <iostream>

using namespace std;

int
main ()
{

  for (int x = 1; x <= 5; x++)
    {

      for (int s = 1; s <= 5 - x; s++)
	{
	  cout << " ";
	}
      for (int y = 1; y <= x; y++)
	{
	  cout << "*";
	}

      cout << "\t" << endl;
    }
  cout << endl;

  for (int x = 1; x <= 5; x++)
    {

      for (int s = 1; s <= 5 - x; s++)
	{
	  cout << " ";
	}
      for (int y = 1; y <= x; y++)
	{
	  cout << "*";
	}
      for (int y = 2; y <= x; y++)
	{
	  cout << "*";
	}
      cout << "\t" << endl;

    }
  cout << endl;
  for (int i = 1; i <= 6; i++)
    {
      for (int r = 1; r <= i; r++)
	{
	  cout << i;
	}
      cout << "\t" << endl;
    }

  cout << endl;

  for (int i = 1; i <= 8; i++)
    {
      for (int r = 1; r <= 10; r++)
	{
	  cout << "X";
	}
      cout << "\t" << endl;
    }
}

